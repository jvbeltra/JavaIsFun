<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollABU"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.dell_pc.javaisfun.AboutTheApp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView46"
            android:layout_width="396dp"
            android:layout_height="48dp"
            android:elevation="5dp"
            app:srcCompat="@drawable/sobrenoss" />

        <TextView
            android:id="@+id/textView216"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="O aplicativo foi desenvolvido inteiramente por Alfredo Vieira Neto e João Vitor Beltramini, ambos estudantes do Curso Técnico em Informática Integrado ao Ensino Médio no Instituto Federal Catarinense - Câmpus Ibirama. O projeto foi concluído com apoio de um vasto material disponível na internet e com apoio do Professor Msc. Daniel dos Santos Jr. e do Professor Eduardo Stahnke,  respectivamente orientador e coorientador do projeto."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="24sp" />


    </LinearLayout>

</ScrollView>
