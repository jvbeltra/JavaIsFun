        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963"
        app:srcCompat="@drawable/proximo" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="283dp"
        android:layout_height="183dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Existem predefinições de variáveis que já estão prontas há muito. Algumas guardam números, algumas guardam palavras, outras simplesmente verdadeiro/falso. Bom, infelizmente não tem outra maneira de aprende-las a não ser decorar, entretanto apostamos que vocês irão gravar logo logo! Aqui está a lista que irá facilitar a compreensão da utilidade de cada uma:"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135"
        app:layout_constraintHorizontal_bias="0.505" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="270dp"
        android:layout_height="336dp"
        app:srcCompat="@drawable/table"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.932" />

</android.support.constraint.ConstraintLayout>
